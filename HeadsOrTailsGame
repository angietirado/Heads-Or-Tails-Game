/**
 * The HeadsOrTailsGame Class
 * This program will allow players to take turns flipping the 
 * @author Angie T
 */

import java.util.Scanner;

public class HeadsOrTailsGame {

    public static void main(String[] args) {
        
        Scanner userInput = new Scanner(System.in);
        
        boolean playAgain = false;
       
        do{
        
        System.out.println("Enter player 1's name: ");
        
        String n1 = userInput.nextLine();
        
        Player p1 = new Player(n1);
        
        System.out.println("Enter player 2's name: ");
        
        String n2 = userInput.nextLine();
        
        Player p2 = new Player(n2);
        
        if(p1.getPoints() > p2.getPoints() && p1.getPoints() == 5){
            System.out.println("Player 1 wins!");
        }
        else{
            System.out.println("Player 2 wins!");
        }
        
        System.out.println("Would you like to play again? Y/N");
        
        String pA = userInput.nextLine();
        
        if(pA.equalsIgnoreCase("Y")){
            playAgain = true;
        }
        
        }while(playAgain);
       
        
        
        
        
        
        

        
        
    }
}
